{
	"root":
	{
		"url": "/",
		"controller": "episodes",
		"action": "show-all-publish"
	},
	"episodes":
	{
		"url": "/episodes",
		"controller": "episodes",
		"action": "show-all-publish"
	},
	"episodes-draft":
	{
		"url": "/episodes/brouillon",
		"controller": "episodes",
		"action": "show-all-draft"
	},
	"episodes-trash":
	{
		"url": "/episodes/corbeille",
		"controller": "episodes",
		"action": "show-all-trash"
	},
	"episode":
	{
		"url": "/episode/([0-9]+)/([a-z0-9-]+)",
		"controller": "episode",
		"action": "show",
		"varsNames": ["number", "slug"]
	},
	"latest-episode":
	{
		"url": "/dernier-episode",
		"controller": "episode",
		"action": "show-last"
	},
	"new-episode":
	{
		"url": "/new-episode",
		"controller": "new-episode",
		"action": "show"
	},
	"comments":
	{
		"url": "/commentaires",
		"controller": "comments",
		"action": "show"
	},
	"comments-approved":
	{
		"url": "/commentaires/approuves",
		"controller": "comments",
		"action": "show-approved"
	},
	"comments-signaled":
	{
		"url": "/commentaires/signales",
		"controller": "comments",
		"action": "show-signaled"
	},
	"comments-trash":
	{
		"url": "/commentaires/corbeille",
		"controller": "comments",
		"action": "show-trash"
	}
}
