{
	"root":
	{
		"url": "/",
		"controller": "episodes",
		"action": "show-all-publish"
	},
	"sign-in":
	{
		"url": "/se-connecter",
		"controller": "users",
		"action": "showSignIn"
	},
	"episodes":
	{
		"url": "/episodes",
		"controller": "episodes",
		"action": "show-all-publish"
	},
	"episodes-draft":
	{
		"url": "/episodes/brouillon",
		"controller": "episodes",
		"action": "show-all-draft",
		"before": {
			"auth": {
				"controller": "users",
				"action": "is-authenticated"
			}
		}
	},
	"episodes-trash":
	{
		"url": "/episodes/corbeille",
		"controller": "episodes",
		"action": "show-all-trash",
		"before": {
			"auth": {
				"controller": "users",
				"action": "is-authenticated"
			}
		}
	},
	"episode":
	{
		"url": "/episode/([a-z0-9-]+)",
		"controller": "episodes",
		"action": "show-one",
		"varsNames": ["slug"]
	},
	"episode-new":
	{
		"url": "/nouvel-episode",
		"controller": "episodes",
		"action": "show-new",
		"before": {
			"auth": {
				"controller": "users",
				"action": "is-authenticated"
			}
		}
	},
	"latest-episode":
	{
		"url": "/dernier-episode",
		"controller": "episodes",
		"action": "show-last"
	},
	"comments":
	{
		"url": "/commentaires",
		"controller": "comments",
		"action": "show",
		"before": {
			"auth": {
				"controller": "users",
				"action": "is-authenticated"
			}
		}
	},
	"comments-approved":
	{
		"url": "/commentaires/approuves",
		"controller": "comments",
		"action": "show-approved",
		"before": {
			"auth": {
				"controller": "users",
				"action": "is-authenticated"
			}
		}
	},
	"comments-signaled":
	{
		"url": "/commentaires/signales",
		"controller": "comments",
		"action": "show-signaled",
		"before": {
			"auth": {
				"controller": "users",
				"action": "is-authenticated"
			}
		}
	},
	"comments-trash":
	{
		"url": "/commentaires/corbeille",
		"controller": "comments",
		"action": "show-trash",
		"before": {
			"auth": {
				"controller": "users",
				"action": "is-authenticated"
			}
		}
	}
}
